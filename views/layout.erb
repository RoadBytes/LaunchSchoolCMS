<!doctype html>
<html lang='en-US'>
  <head>
    <title>File CMS App</title>
    <link rel="stylesheet" href="stylesheets/file_cms.css">
  </head>
  <body>
    <% if session[:error] %>
      <%= "<p class='message'>#{ session.delete :error }</p>" %>
    <% end %>
    <% if session[:success] %>
      <%= "<p class='message'>#{ session.delete :success }</p>" %>
    <% end %>

    <%= yield %>
  </body>
</html>
